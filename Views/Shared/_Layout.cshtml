        <!-- NAVIGATION DESKTOP -->
    <nav id="navbar">
        <!-- DIV LOGO -->
        <div id="logo-div">
            <a href="#hero-section">
                <img id="logo-img" src="../img/Frame 1.png" alt="Logo">
