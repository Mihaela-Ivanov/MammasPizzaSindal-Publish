        <a id="nav-opening-hours-id" href="#opening-hours-id">
            <div onclick="closeMenu()" class="nav-btn">
                <i class="fa fa-clock-o" aria-hidden="true"></i>
                <p>Åbningstider</p>
            </div>
        </a>
