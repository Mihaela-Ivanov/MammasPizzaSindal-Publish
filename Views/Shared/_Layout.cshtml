        <a id="nav-menu-id" href="#meny-section">
            <div onclick="closeMenu()" class="nav-btn">
                <i class="fa fa-cutlery" aria-hidden="true"></i>
                <p>Menu</p>
            </div>
        </a>
        <a id="nav-location-id" href="#contact-id">
            <div onclick="closeMenu()" id="location-btn" class="nav-btn">
                <i class="fa fa-map-marker" aria-hidden="true"></i>
                <p>Finde her</p>
