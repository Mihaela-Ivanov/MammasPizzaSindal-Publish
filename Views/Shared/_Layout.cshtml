                </div>
            </a>
           <a href="tel:004598935566">
            <div class="nav-btn">
                <i  class="fa fa-phone" aria-hidden="true"></i>
                <p>98 93 55 66</p>
            </div>
           </a>
        </nav>
    </header>
    <!-- CONTENT -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- FOOTER -->
    <footer id="footer">
    <div>
        <ul class="footer-list">
            <li class=" list-header">Find os</li>
